{% extends 'base.html.twig' %}

{% block body %}
    <h1>Section</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ section.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ section.title }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ section.position }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ section.rate }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('section_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('section_edit', { 'id': section.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
